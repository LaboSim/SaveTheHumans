<Window x:Class="SaveTheHumans_v2.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveTheHumans_v2"
        mc:Ignorable="d"
        Title="SplashScreen" Height="700" Width="1000" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Height="700" Width="1000">
            <Image   Height="700" Width="1000" Stretch="Fill" Source="Icon/Aliens.png"/>
            <Button x:Name="startButton" Content="CONTINUE" Foreground="#FF060101" Opacity="0.3"
                    Background="White" FontSize="24" FontWeight="Bold" Width="150" Height="50" Margin="800,-150,50,0" Click="StartButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
